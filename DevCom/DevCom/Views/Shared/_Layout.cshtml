<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style="background-color: #e4e9f7">
    <div class="container-fluid">
        <div class="custom_sidebar">
            <div class="logo_details">
                <i class="bx bxl-audible icon bx-sm"></i>
                <div class="logo_name">DevCom</div>
                <i class="bx bx-menu" id="custom_btn"></i>
            </div>
            <ul class="custom-nav-list list-unstyled">
                @if (Session["GuestSS"] == null)
                {
                    <li class="profile mb-5">
                        <a href="#">
                            <img src="~/Assets/profile.jpeg" alt="profile image">
                            <span class="link_name">@Session["UsernameSS"]</span>
                        </a>
                        <span class="tooltip">@Session["UsernameSS"]</span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Notepad")">
                            <i class='bx bx-notepad bx-sm'></i>
                            <span class="link_name">Notepad</span>
                        </a>
                        <span class="tooltip">Notepad</span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Task")">
                            <i class='bx bx-task bx-sm'></i>
                            <span class="link_name">Tasks</span>
                        </a>
                        <span class="tooltip">Tasks</span>
                    </li>
                    <li>
                        <a href="#">
                            <i class='bx bx-calendar bx-sm'></i>
                            <span class="link_name">Reminder</span>
                        </a>
                        <span class="tooltip">Reminder</span>
                    </li>
                    <li>
                        <a href="#">
                            <i class='bx bx-table bx-sm'></i>
                            <span class="link_name">Visual Board</span>
                        </a>
                        <span class="tooltip">Visual Board</span>
                    </li>
                    <li class="vault">
                        <a href="#">
                            <i class='bx bx-hdd bx-sm' id="_vault"></i>
                            <span class="link_name">Vault</span>
                        </a>
                        <span class="tooltip">Settings</span>
                    </li>
                } else
                {
                    <li class="profile mb-5">
                        <a href="#">
                            <img src="~/Assets/profile.jpeg" alt="profile image">
                            <span class="link_name">user 001</span>
                        </a>
                        <span class="tooltip">user 001</span>
                    </li>
                    <li>
                        <a href="@Url.Action("LoginReminder", "Home")">
                            <i class='bx bx-notepad bx-sm'></i>
                            <span class="link_name">Notepad</span>
                        </a>
                        <span class="tooltip">Notepad</span>
                    </li>
                    <li>
                        <a href="@Url.Action("LoginReminder", "Home")">
                            <i class='bx bx-task bx-sm'></i>
                            <span class="link_name">Tasks</span>
                        </a>
                        <span class="tooltip">Tasks</span>
                    </li>
                    <li>
                        <a href="@Url.Action("LoginReminder", "Home")">
                            <i class='bx bx-calendar bx-sm'></i>
                            <span class="link_name">Reminder</span>
                        </a>
                        <span class="tooltip">Reminder</span>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "VisualBoard")">
                            <i class='bx bx-table bx-sm'></i>
                            <span class="link_name">Visual Board</span>
                        </a>
                        <span class="tooltip">Visual Board</span>
                    </li>
                    <li class="vault">
                        <a href="@Url.Action("LoginReminder", "Home")">
                            <i class='bx bx-hdd bx-sm' id="_vault"></i>
                            <span class="link_name">Vault</span>
                        </a>
                        <span class="tooltip">Settings</span>
                    </li>
                }
            </ul>
        </div>
        <section class="home-section" style="box-sizing: border-box;">
            <div class="row justify-content-between">
                <div class="col text">
                    @ViewBag.Path
                </div>
                <div class="col pt-4 text-end">
                    <i class="bx bx-search bx-sm align-middle btn btn-sm"></i>
                    <input type="text" placeholder="Search...">
                    <i class='bx bx-history bx-sm align-middle mx-3 btn btn-sm'></i>
                    <i class="bx bx-menu bx-sm align-middle mx-3 btn btn-sm"></i>
                    <!--if not signed in-->
                    @if (Session["GuestSS"] != null)
                    {
                        @Html.ActionLink("Sign In", "Login", "Auth", null, new { @class = "btn btn-primary" });
                    }
                    else
                    {
                        @Html.ActionLink("Log Out", "Logout", "Auth", null, new { @class = "btn btn-primary" });
                    }
                </div>
            </div>
            <div class="my-5"></div>
            <div class="row"style="max-height: 80%">
                @RenderBody()
            </div>
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
